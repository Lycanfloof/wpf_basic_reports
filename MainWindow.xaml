<Window x:Class="wpf_basic_reports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_basic_reports"
        mc:Ignorable="d"
        Title="Town Display" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame Source="/UI/TableView.xaml" Grid.Row="1"/>
        <ToolBar Grid.Row="0">
            <Button x:Name="OpenButton" Content="Open" Click="OpenButton_Click"/>
            <Button x:Name="TableButton" Content="View Table" Click="TableButton_Click"/>
            <Button x:Name="ChartButton" Content="View Chart"/>
        </ToolBar>
    </Grid>
</Window>
